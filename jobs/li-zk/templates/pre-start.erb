#!/bin/bash

export LOG_DIR=/var/vcap/sys/log/li-zk
export RUN_DIR=/var/vcap/sys/run/li-zk
export STORE_DIR=/var/vcap/store/li-zk
export DATA_DIR=/var/vcap/data/li-zk
export TMP_DIR=/var/vcap/data/li-zk/tmp

for dir in $LOG_DIR $RUN_DIR $DATA_DIR $STORE_DIR $TMP_DIR;do
  mkdir -p ${dir}
  chown vcap:vcap ${dir}
  chmod 700 ${dir}
done

cp  /var/vcap/jobs/li-zk/config/myid ${STORE_DIR}/

chown -R vcap:vcap ${STORE_DIR}
